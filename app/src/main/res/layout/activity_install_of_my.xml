<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    android:orientation="vertical"
    tools:context=".InstallOfMy"

    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Tôi">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/ss"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/toolBarChat"
        android:background="@color/purple_200" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="55dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/img"
                    android:scaleType="centerCrop"

                    android:src="@drawable/button_otp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Khang"
                android:textSize="20dp"
                android:textStyle="bold" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btndark"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left"

                    android:paddingLeft="70dp"
                    android:paddingTop="7dp"
                    android:text="Chế độ tối \nTắt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/purple_700"
                        android:padding="2dp"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="4dp"
                            android:scaleType="centerCrop"
                            android:scaleX="1.24"
                            android:scaleY="1.2"
                            android:src="@drawable/night_half_moon_icon_176424"
                            app:riv_corner_radius="40dp" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingLeft="70dp"
                    android:id="@+id/btnMessageWaiting"
                    android:text="Tin nhắn đang chờ" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/mail" />


                </LinearLayout>
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">


                <Button
                    android:id="@+id/btnStorage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingLeft="70dp"
                    android:text="Đoạn chat lưu trữ" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="#112CDF"
                            android:padding="5dp"
                            android:src="@drawable/ic_baseline_save_254" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="Trang cá nhân" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingLeft="70dp"

                    android:text="Trạng thái tuỳ chỉnh" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="20dp"

                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="#C111DF"
                            android:padding="6dp"
                            android:src="@drawable/ic_baseline_insert_emoticon_24" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left"
                    android:paddingLeft="70dp"
                    android:paddingTop="7dp"
                    android:text="Trạng thái hoạt động\nTắt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:scaleX="1.23"
                        android:scaleY="1.23"
                        android:src="@drawable/ic_baseline_contact_support_24" />


                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnEditName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"

                    android:paddingLeft="70dp"
                    android:text="Thay đổi tên người dùng" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:scaleX="1.23"
                        android:scaleY="1.23"
                        android:src="@drawable/ic_baseline_edit_location_24" />


                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="Tuỳ chọn" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingLeft="70dp"
android:id="@+id/btnEditProfile"
                    android:text="Trang cá nhân" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="38dp"

                            android:layout_height="38dp"
                            android:background="#112CDF"

                            android:src="@drawable/ic_baseline_person_pin_24" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingLeft="70dp"

                    android:text="Thông báo và âm thanh" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"

                            android:background="#C111DF"
                            android:padding="6dp"

                            android:src="@drawable/ic_baseline_notifications_24" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"

                    android:paddingLeft="70dp"
                    android:text="Ảnh phương tiện" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="#FFC107"
                            android:padding="6dp"
                            android:src="@drawable/ic_baseline_image_24" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingLeft="70dp"
                    android:text="Bong bóng" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="38dp"

                            android:layout_height="38dp"
                            android:background="#26FA01"
                            android:padding="6dp"

                            android:src="@drawable/ic_baseline_mark_email_unread_24" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="Tài khoản" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnsignOut"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingLeft="70dp"
                    android:text="Chuyển tài khoản" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="38dp"

                            android:layout_height="38dp"
                            android:background="#C111DF"
                            android:padding="6dp"

                            android:src="@drawable/ic_baseline_cached_24" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
