<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Giới tính của bạn là gì?"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Về sau bạn có thể thay đổi những ai có thể nhìn thấy giới tính của mình trên trang cá nhân"
        android:textSize="15dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group">

        <RadioButton
            android:id="@+id/rdiNam"
            style="?android:attr/borderlessButtonStyle"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radiobutton"
            android:checked="true"
            android:gravity="start|center_vertical"
            android:paddingLeft="25dp"
            android:text="Nam"
            android:textAllCaps="false" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#AEA1A1" />

        <RadioButton
            android:id="@+id/rdiNu"

            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radiobutton"
            android:gravity="start|center_vertical"
            android:paddingLeft="25dp"
            android:text="Nữ"
            android:textAllCaps="false" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#AEA1A1" />
    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="9dp">

        <Button
            android:id="@+id/continue_sex"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background ="@color/purple_500"
            android:text="Tiếp"
            android:textAllCaps="false"
            android:textColor="@color/white"

            />
    </androidx.cardview.widget.CardView>
</LinearLayout>