<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videoCall.IncomingCallActivity"
    android:gravity="center"
    tools:ignore="MissingDefaultResource"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"

    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/v_local"
        android:background="@drawable/ic_baseline_call_24"
        />
    <FrameLayout
        android:layout_margin="20dp"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:id="@+id/v_remote"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="20dp"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="30dp">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:button="@drawable/cam"
                android:scaleX="2"
                android:buttonTint="@color/white"

                android:background="#5C5858"
                android:scaleY="2"
                 tools:ignore="SpeakableTextPresentCheck"
                 />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="30dp"
            >


            <ImageButton
                android:background="#5C5858"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/ic_baseline_cameraswitch_24"
                tools:ignore="SpeakableTextPresentCheck"
                android:contentDescription="TODO" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="30dp">


            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5C5858"
                android:scaleX="2"
                android:scaleY="2"
                android:button="@drawable/miccall"
                android:buttonTint="@color/white"
                 tools:ignore="SpeakableTextPresentCheck"
                android:contentDescription="TODO" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="30dp">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5C5858"
                android:button="@drawable/audiocall"
                android:buttonTint="@color/white"
                android:contentDescription="TODO"
                android:scaleX="2"
                android:scaleY="2"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="30dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F60101"
                android:paddingBottom="10dp"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:src="@drawable/call"
                tools:ignore="SpeakableTextPresentCheck"
                android:contentDescription="TODO" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>
