        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="radioButtonStyle">@style/buttonradio</item>
        <item name="android:fillColor">@color/white</item>
        <item name="background_color">@color/black</item>
        <item name="text_color">@color/textbtnSearch</item>
        <item name="tint_color">@color/white</item>
        <item name="buttonStyle">@style/buttonDark</item>
        <item name="text_color_verti">#6C6262</item>
